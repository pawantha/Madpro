<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".topsell">
    <RelativeLayout android:layout_width="380dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp"

    >
        <TextView
                android:id="@+id/prduts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product "
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
        />
        <ImageView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ht"
                android:layout_below="@id/prduts"
        />

                <TextView
                        android:id="@+id/dis1"
                        android:layout_width="match_parent"
                        android:layout_below="@id/item1"
                        android:layout_height="wrap_content"
                        android:text="Hot garlic chicken"
                        android:textAlignment="center"
                        android:textSize="20sp"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/pri1"
                        android:layout_height="wrap_content"
                        android:text="RS:- 800.00"
                        android:textSize="15dp"
                        android:layout_below="@id/dis1"
                        android:textAlignment="center"
                />
                <ImageView
                        android:id="@+id/item3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/pi1"
                        android:layout_below="@id/pri1"

                />
                <TextView
                        android:id="@+id/des3"
                        android:layout_width="match_parent"
                        android:layout_below="@id/item3"
                        android:layout_height="wrap_content"
                        android:text="Valtellina Pizza"
                        android:textAlignment="center"
                        android:textSize="20sp"
                />
                <TextView
                        android:id="@+id/pri3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RS:- 1800.00"
                        android:textSize="15dp"
                        android:layout_below="@id/des3"
                        android:textAlignment="center"
                />
        <ImageView
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/pi1"
                android:layout_below="@id/pri3"

        />
        <TextView
                android:id="@+id/des4"
                android:layout_width="match_parent"
                android:layout_below="@id/item4"
                android:layout_height="wrap_content"
                android:text="Valtellina Pizza"
                android:textAlignment="center"
                android:textSize="20sp"
        />
        <TextView
                android:id="@+id/pri4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RS:- 1800.00"
                android:textSize="15dp"
                android:layout_below="@id/des4"
                android:textAlignment="center"
        />


    </RelativeLayout>

</ScrollView>