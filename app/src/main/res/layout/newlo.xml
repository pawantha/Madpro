<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp">
        <TextView
                android:id="@+id/prduts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product "
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
        />
        <ImageView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/ht"
                android:layout_below="@id/prduts"
        />
        <TextView
                android:id="@+id/dis1"
                android:layout_width="match_parent"
                android:layout_below="@id/item1"
                android:layout_height="wrap_content"
                android:text="Hot garlic chicken"
                android:textAlignment="center"
                android:textSize="20sp"
        />
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/pri1"
                android:layout_height="wrap_content"
                android:text="RS:- 800.00"
                android:textSize="15dp"
                android:layout_below="@id/dis1"
                android:textAlignment="center"
        />
        <ImageView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/pi1"
                android:layout_below="@id/pri1"

        />
        <TextView
                android:id="@+id/des2"
                android:layout_width="match_parent"
                android:layout_below="@id/item2"
                android:layout_height="wrap_content"
                android:text="Valtellina Pizza"
                android:textAlignment="center"
                android:textSize="20sp"
        />
        <TextView
                android:id="@+id/pri2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RS:- 1800.00"
                android:textSize="15dp"
                android:layout_below="@id/des2"
                android:textAlignment="center"
        />

    </RelativeLayout>

</RelativeLayout>